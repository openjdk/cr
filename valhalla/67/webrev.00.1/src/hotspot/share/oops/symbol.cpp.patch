+bool Symbol::is_Q_singledim_array_signature() const {
+  int len = utf8_length();
+  return len > 3 && char_at(0) == JVM_SIGNATURE_ARRAY && char_at(1) == JVM_SIGNATURE_VALUETYPE &&
+                    char_at(len - 1) == JVM_SIGNATURE_ENDCLASS;
+}
